generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
  todos     Todo[]
}

model Todo {
  id        Int   @id @default(autoincrement())
  text    String
  deadline  DateTime
  done    Boolean  @default(false)
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  priority String
  createdAt DateTime @default(now())
}

